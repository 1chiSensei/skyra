<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Standalone Discord Bot">
    <meta name="author" content="kyra">

    <meta property="og:title" content="SkyraDiscord"/>
    <meta property="og:url" content="https://skyradiscord.com/"/>
    <meta property="og:image" content="https://skyradiscord.com/img/Skyra.png"/>

    <title>Skyra - <%= page %></title>

    <!-- Bootstrap Core CSS -->
    <link href="/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <!-- Theme CSS -->
    <link href="/css/skyra.min.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>

<body id="page-top" class="index">
    <div id="skipnav"><a href="#maincontent">Skip to main content</a></div>

    <!-- Navigation -->
    <nav id="mainNav" class="navbar navbar-default navbar-fixed-top navbar-custom">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand" href="/">Skyra</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li class="hidden">
                        <a href="#page-top"></a>
                    </li>
                    <li class="<%= page === 'Home' ? 'page-scroll' : '' %>">
                        <a href="<%= page === 'Home' ? '#about' : '/'%>">About</a>
                    </li>
                    <li class="<%= page === 'Home' ? 'page-scroll' : '' %>">
                        <a href="<%= page === 'Home' ? '#banners' : '/#banners'%>">Banners</a>
                    </li>
                    <li class="<%= page === 'Commands' ? 'page-scroll' : '' %>">
                        <a href="<%= page === 'Commands' ? '#page-top' : '/commands'%>">Commands</a>
                    </li>
                    <li class="<%= page === 'Statistics' ? 'page-scroll' : '' %>">
                        <a href="<%= page === 'Statistics' ? '#page-top' : '/statistics'%>">Statistics</a>
                    </li>
                    <% if (user.auth === false) { %>
                        <li>
                            <a href="/login"><span class="glyphicon glyphicon-log-in"></span> Login</a>
                        </li>
                    <% } else { %>
                        <div class="dropdown">
                            <button class="dropdown-toggle button-nav" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                <%= `${user.username}#${user.discriminator}`; %>
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                <li><a href="/me">Profile</a></li>
                                <li><a href="/dashboard">Dashboard</a></li>
                                <% if (Client.owner === user.id) { %>
                                <li role="separator" class="divider"></li>
                                <li><a href="/admin">Admin</a></li>
                                <% } %>
                                <li role="separator" class="divider"></li>
                                <li><a href="/logout">Logout</a></li>
                            </ul>
                        </div>
                    <% } %>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>

    <% if (page !== null) { %>
    <!-- Header -->
    <header>
        <div class="container" id="maincontent" tabindex="-1">
            <div class="row">
                <div class="col-lg-12">
                    <% if (page === "Home") { %>
                        <img class="img-responsive" src="img/Skyra.png" alt="">
                        <div class="intro-text">
                            <h1 class="name">Skyra</h1>
                            <hr class="star-light">
                            <span class="skills">Standalone Discord Bot</span>
                        </div>
                    <% } else { %>
                        <div class="intro-text">
                            <h1 class="name"><%= page %></h1>
                            <hr class="star-light">
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </header>
    <% } %>